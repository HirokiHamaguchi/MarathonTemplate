{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build active file",
            "command": "/usr/bin/g++-10",
            "args": [
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}",
                "-std=c++17",
                "-Dhari64",
                "-Wall",
                "-Wextra",
                "-Wfatal-errors",
                "-fdiagnostics-color=always",
                "-D_GLIBCXX_DEBUG",
                "-DVIS",
                "-I/usr/include/python3.8",
                "-lpython3.8",
                // "-O2",
                // "-O3",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}